{
  "compilerOptions": {
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "target": "ESNext",
    "types": ["chai", "mocha", "node"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**/*", "src/**/*.test.ts"]
}
